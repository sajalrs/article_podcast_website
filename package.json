{
  "name": "article_podcast_website",
  "version": "1.0.0",
  "description": "Webpage that hosts blogs and podcasts",
  "scripts": {
    "client": "cd client && yarn start",
    "next-client": "cd client-next && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "next-dev":  "concurrently --kill-others-on-fail \"yarn server\" \"yarn next-client\"",
    "start": "node server.js",
    "testClient": "cd client && yarn test",
    "test": "yarn testClient",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajalrs/article_podcast_website.git"
  },
  "author": "Sajal Satyal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sajalrs/article_podcast_website/issues"
  },
  "homepage": "https://github.com/sajalrs/article_podcast_website#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.3.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mailgen": "^2.0.14",
    "mongoose": "^5.10.4",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.14",
    "nodemailer-sendgrid": "^1.0.3",
    "socket.io": "^2.3.0",
    "xml2json": "^0.12.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^2.0.4",
    "redux-mock-store": "^1.5.4"
  }
}
